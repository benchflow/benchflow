        <spoon.core.version>5.2.0</spoon.core.version>
        <java.semver.version>0.9.0</java.semver.version>
        <jgrapht.core.version>0.9.2</jgrapht.core.version>
        <apache.httpclient.version>3.1</apache.httpclient.version>
    </properties>

    <repositories>
