        <dependency>
            <groupId>com.github.simonedavico</groupId>
            <artifactId>commons</artifactId>
            <version>21d8f9d</version>
        </dependency>

    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>net.alchim31.maven</groupId>
                    <artifactId>scala-maven-plugin</artifactId>
                    <version>3.2.2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.3</version>
                </plugin>
                <!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
                <plugin>
                	<groupId>org.eclipse.m2e</groupId>
                	<artifactId>lifecycle-mapping</artifactId>
                	<version>1.0.0</version>
                	<configuration>
                		<lifecycleMappingMetadata>
                			<pluginExecutions>
                				<pluginExecution>
                					<pluginExecutionFilter>
                						<groupId>
                							org.apache.maven.plugins
                						</groupId>
                						<artifactId>
                							maven-install-plugin
                						</artifactId>
                						<versionRange>
                							[2.5.2,)
                						</versionRange>
                						<goals>
                							<goal>install-file</goal>
                						</goals>
                					</pluginExecutionFilter>
                					<action>
                						<ignore/>
                					</action>
                				</pluginExecution>
                			</pluginExecutions>
                		</lifecycleMappingMetadata>
                	</configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>scala-maven-plugin</artifactId>
                <configuration>
                    <recompileMode>incremental</recompileMode>
                    <!--
                    required to avoid pulling multiple scala versions
                    since the current version of combinators library
                    pulls scala 2.11.6; see also
                    http://www.daodecode.com/blog/2014/10/27/scala-maven-plugin-and-multiple-versions-of-scala-libraries-detected/
                    -->
                    <scalaCompatVersion>2.11</scalaCompatVersion>
                    <!--<compileOrder>ScalaThenJava</compileOrder>-->
                    <args>
                        <arg>-feature</arg>
                        <arg>-deprecation</arg>
                        <arg>-explaintypes</arg>
                        <arg>-target:jvm-1.8</arg>
                        <arg>-language:postfixOps</arg>
                    </args>
                </configuration>
                <executions>
                    <execution>
                        <id>scala-compile-first</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>add-source</goal>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>scala-test-compile</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.5.2</version>
                <executions>
                    <execution>
                        <id>install-faban-agents</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>cloud.benchflow</groupId>
                            <artifactId>faban-agents</artifactId>
                            <version>0.1</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/lib/fabanagents.jar</file>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-faban-driver</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>cloud.benchflow</groupId>
                            <artifactId>faban-driver</artifactId>
                            <version>0.1</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/lib/fabandriver.jar</file>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install-apache-httpclient</id>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>org.apache</groupId>
                            <artifactId>httpclient</artifactId>
                            <version>3.1</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/lib/commons-httpclient-3.1.jar</file>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
